<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/_7_back">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나이"
                android:textSize="30dp"
                android:inputType="text"
                android:id="@+id/textView14" />

            <EditText
                android:id="@+id/etAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="       "
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="35dp"
                android:inputType="date" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="30dp"
                android:inputType="text"
                android:id="@+id/textView17" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="몸무게"
                android:textSize="30dp"
                android:inputType="text"
                android:id="@+id/textView15" />

            <EditText
                android:id="@+id/etWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="       "
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:inputType="date" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kg"
                android:textSize="30dp"
                android:inputType="text"
                android:id="@+id/textView18" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="심박수"
                android:textSize="30dp"
                android:inputType="text"
                android:id="@+id/textView30"
                android:layout_below="@+id/editText2" />


            <RadioGroup
                android:id="@+id/rdSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="10dp" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="on"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/on" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="off"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:id="@+id/off"
                    android:checked="true"
                    android:layout_marginLeft="20dp" />
            </RadioGroup>



        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(운동 시 심박수 측정을 활성화)"
            android:textSize="20dp"
            android:inputType="text"
            android:layout_below="@+id/editText2" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="경고음"
                android:textSize="30dp"
                android:inputType="text"
                android:id="@+id/textView30"
                android:layout_below="@+id/editText2" />


            <RadioGroup
                android:id="@+id/rdAlert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="10dp" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="on"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/alertOn" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="off"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:id="@+id/alertOff"
                    android:checked="true"
                    android:layout_marginLeft="20dp" />
            </RadioGroup>



        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btSave"
            android:background="@drawable/_7_savebuts" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btCancle"
            android:background="@drawable/_7_cancels"
            android:layout_marginLeft="35dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginTop="80dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btLogout"
            android:background="@drawable/_7_logouts"
            android:gravity="right"
            android:layout_gravity="right" />
    </LinearLayout>


</LinearLayout>