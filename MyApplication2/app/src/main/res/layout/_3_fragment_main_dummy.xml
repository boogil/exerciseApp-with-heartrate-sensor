<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity$DummySectionFragment" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp">

            <Button
                android:id="@+id/button_send"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:text="연결 다시하기"
                style="@style/AppTheme.FormButton"
                android:layout_marginTop="20dp"
                android:layout_gravity="right"
                android:layout_marginRight="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="심박수"
                android:textSize="100px"
                android:id="@+id/text_chat"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:paddingLeft="130dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@drawable/bps2"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp" />
        </LinearLayout>

    </FrameLayout>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">


        <SeekBar
            android:layout_width="305dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:thumb="@drawable/pinheart"
            android:progress="0"
            android:max="100"
            android:progressDrawable="@drawable/custom_progress_drawable3"/>
        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="305dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/progressBar2"
            android:layout_above="@+id/txtLabel"

            android:progressDrawable="@drawable/custom_progress_drawable2"
            android:layout_centerHorizontal="true"
            android:progress="0"
            android:max="100"
            android:layout_height="65px"
            android:indeterminate="false" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView3"
        android:background="@drawable/_3_5zone10"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_chat"
            android:visibility="invisible"/>

    </LinearLayout>

</LinearLayout>
